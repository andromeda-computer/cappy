    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "@cloudflare/workers-types/2023-07-01"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    // "paths": {
    //   "react": ["./node_modules/hono/dist/jsx"],
    //   "react-dom": ["./node_modules/hono/dist/jsx/dom"],
    // }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
